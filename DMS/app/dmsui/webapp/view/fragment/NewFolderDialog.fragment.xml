<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
  <Dialog id="newFolderDialog" title="Create New Folder" stretch="false">
    <VBox class="sapUiSmallMargin">
      <Label text="Folder Name"/>
      <Input id="folderNameInput" placeholder="Enter folder name"/>
    </VBox>
    <beginButton>
      <Button text="Create" press=".onCreateFolderConfirm"/>
    </beginButton>
    <endButton>
      <Button text="Cancel" press=".onCancelCreateFolder"/>
    </endButton>
  </Dialog>
</core:FragmentDefinition>
